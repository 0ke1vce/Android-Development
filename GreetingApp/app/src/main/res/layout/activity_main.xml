<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/oo"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/text_Id"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginTop="217dp"
        android:layout_marginBottom="71dp"
        android:padding="40px"
        android:text="Welcome to Greeting App!"

        android:textAlignment="center"
        android:textAllCaps="true"

        android:textColor="#E60F0F"
        android:textSize="64px"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/InputId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/InputId"

        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginBottom="81dp"
        android:hint="Please Enter your name"

        android:inputType="text"
        android:padding="32px"
        android:textColorHint="#CF00F3"
        app:layout_constraintBottom_toTopOf="@+id/Buttn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_Id" />

    <Button
        android:id="@+id/Buttn"
        android:layout_width="198dp"
        android:layout_height="0dp"


        android:layout_marginBottom="110dp"
        android:clickable="true"

        android:enabled="true"
        android:text="Click me"

        android:textColor="#BD3D3D"

        android:textSize="78px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InputId" />


</androidx.constraintlayout.widget.ConstraintLayout>