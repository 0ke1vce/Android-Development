<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@drawable/appbackground"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="500px"

        android:layout_height="0dp"
        android:layout_marginBottom="147dp"


        android:background="@drawable/imagelogo"
        app:layout_constraintBottom_toTopOf="@+id/Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/EmailLogin"
        android:layout_width="500px"
        android:layout_height="150px"
        android:layout_marginEnd="120dp"
        android:hint="Enter your email"
        app:layout_constraintBottom_toTopOf="@+id/Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Logo"
        app:layout_constraintVertical_bias="0.177" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="500px"
        android:layout_height="150px"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="337dp"
        android:hint="Enter Password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Logo" />

    <ImageView
        android:id="@+id/userLoginImg"
        android:layout_width="150px"
        android:layout_height="150px"


        android:background="@drawable/user"
        app:layout_constraintBottom_toTopOf="@+id/userpasswordimg"
        app:layout_constraintEnd_toStartOf="@+id/EmailLogin"
        app:layout_constraintHorizontal_bias="0.795"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.832" />

    <ImageView
        android:id="@+id/userpasswordimg"
        android:layout_width="150px"
        android:layout_height="150px"


        android:layout_marginBottom="336dp"
        android:background="@drawable/password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Password"
        app:layout_constraintHorizontal_bias="0.795"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmailLogin"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/LoginToApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Login To App"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Password"
        app:layout_constraintVertical_bias="0.861" />

    <TextView
        android:id="@+id/Signin"
        android:layout_width="350px"
        android:layout_height="50px"
        android:layout_marginTop="4dp"
        android:clickable="true"
        android:text="New to App SignIn"
        android:textColor="#0074FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.737"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Password" />


</androidx.constraintlayout.widget.ConstraintLayout>